<!DOCTYPE html>
<html>
  <head>
    <title>Sales</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <nav class="navbar navbar-fixed-top" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <a class="navbar-brand" href="#">Sale</a>
        </div>
        <ul class="nav navbar-nav">
          <li class="nav-item">
            <%= link_to "All Sales", sales_path, class: "nav-item" %>
          </li>  
          <li class="nav-item">
            <%= link_to "All Products", products_path, class: "nav-item" %>
          </li>
        </ul>
        <ul class="nav navbar-nav">
          <% if user_signed_in? %>
            <li class="nav-item">
              <%= link_to current_user.email, edit_user_registration_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "Log Out" , destroy_user_session_path, method: :delete, class: "nav-link" %>
            </li>
            <% else %>   
            <li class="nav-item">
              <%= link_to "Sign In", user_session_path, class: "nav-link" %>
            </li>   
            <li class="nav-item">
              <%= link_to "Register", new_user_registration_path, class: "nav-link" %>
            </li>
          <% end %>
        </ul>
      </div>
    </nav>
    <div class="container">
      <p class="notice"><%#= notice %></p>
      <p class="alert"><%#= alert %></p>
      <%= yield %>
    </div>    
  </body>
</html>
